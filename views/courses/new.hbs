{{> navbar}}

<div class="form">
  <h2>Create A Course</h2>
  <form action="/courses/add" method="POST">
    <label>
      Course Name
      <input type="text" name="courseName" required/>
    </label>

    <label>
      Date
      <input type="date" id="input-date" name="date" required/>
    </label>

    <label>
      Start time
      <input type="time" id="input-time" name="startTime" required />
    </label>

    <label>
      Maximun participants
      <input type="number" name="maxParticipants" min="1" placeholder="10" />
    </label>

    <label>
      Address
      <input type="text" name="address" placeholder="10 Avenue Sport, 11111 Paris" required/>
    </label>

    <label>
      Choose a category:
      <select name="category" required>
        <option value="">--Please choose an option--</option>
        {{#each categories}}
          <option value="{{this}}">{{this}}</option>
        {{/each}}
    </select>
    </label>

    <label>
      Description
      <input type="text" name="description" placeholder="Please write some information about your course." />
    </label>

    <button type="submit">Create Course</button>

    {{#if errorMessage}}
      <p class="error">{{errorMessage}}</p>
    {{/if}}
  </form>
</div>